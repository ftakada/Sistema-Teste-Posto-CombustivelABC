unit Sistema.View.Tanques;

interface

uses
  Winapi.Windows,
  Winapi.Messages,
  System.SysUtils,
  System.Variants,
  System.Classes,
  Vcl.Graphics,
  Vcl.Controls,
  Vcl.Forms, Vcl.Dialogs,
  Data.DB,
  Vcl.StdCtrls,
  Vcl.Grids,
  Vcl.DBGrids,
  Sistema.View.Padrao,
  Sistema.Controller.Services.Entities.Interfaces,
  Sistema.Controller.Services.Entities;

type
  TViewTanques = class(TViewPadrao)
    procedure FormClose(Sender: TObject; var Action: TCloseAction);
    procedure FormCreate(Sender: TObject);
    procedure BtnFiltrarClick(Sender: TObject);
  private
    { Private declarations }
    FControllerServicesEntities: iControllerServicesEntities;
    procedure Listar;
  public
    { Public declarations }
  end;

var
  ViewTanques: TViewTanques;

implementation

{$R *.dfm}

procedure TViewTanques.BtnFiltrarClick(Sender: TObject);
begin
  inherited;
  Listar;
end;

procedure TViewTanques.FormClose(Sender: TObject; var Action: TCloseAction);
begin
  inherited;
  Action := caFree;
  ViewTanques := nil;
end;

procedure TViewTanques.FormCreate(Sender: TObject);
begin
  inherited;
  FControllerServicesEntities := TControllerServicesEntities.New;
  FControllerServicesEntities.Tanques.DataSource(DtSrc);
end;

procedure TViewTanques.Listar;
begin
  FControllerServicesEntities.Tanques.Listar;
end;

end.
